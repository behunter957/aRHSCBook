<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    tools:context="com.rhsquashclub.arhscbook.RHSCMain" >

	<FrameLayout android:id="@+id/TabViewFragment" 
	    android1:layout_width="match_parent"
        android1:layout_height="match_parent"
        android:layout_weight="2"
	    />

    <RadioGroup
        android1:id="@+id/tabbar"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:padding="20dp"
        android:layout_weight="0"
        android1:orientation="horizontal" >
        <RadioButton
            android:id="@+id/rad_courts"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/search"
            android:gravity="center"
            android:text="@string/tab_button_text_courts"
            android1:checked="true" />

        <RadioButton
            android:id="@+id/rad_bookings"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bookmarks"
            android:gravity="center"
            android:text="@string/tab_button_text_bookings"
            android1:checked="false" />

        <RadioButton
            android:id="@+id/rad_members"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/group"
            android:gravity="center"
            android:text="@string/tab_button_text_members"
            android1:checked="false" />
</RadioGroup>

</LinearLayout>