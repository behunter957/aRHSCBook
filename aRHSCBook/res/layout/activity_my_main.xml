<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    tools:context="com.rhsquashclub.arhscbook.MyMain" >

    <fragment
        android:id="@+id/TabViewFragment"
        android:name="android.support.v4.app.ListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" />

        <RadioGroup
            android1:id="@+id/radioGroup1"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:orientation="horizontal"
            android:layout_weight="0" >

            <RadioButton
                android:id="@+id/rad_courts"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/courts_icon"
                android:gravity="center"
                android:text="Courts"
                android1:checked="true" />

            <RadioButton
                android:id="@+id/rad_bookings"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/bookings_icon"
                android:gravity="center"
                android:text="My Bookings"
                android1:checked="false" />

            <RadioButton
                android:id="@+id/rad_members"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/members_icon"
                android:gravity="center"
                android:text="Members"
                android1:checked="false" />
        </RadioGroup>

</LinearLayout>